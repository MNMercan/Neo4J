<html>
    <head>
        <title>DataViz</title>
        <style type="text/css">
            .form{
                
                position: relative;
                left: 43%;
                right: 10vh;
                z-index: 1;
                width: 30px;
                height: 20px;
                border: none;
                border-radius: 6px;
            }
            #viz {
                z-index: 0;
                background-color: rgb(89, 97, 94);
                height: 600px;
                
            }
        </style>
        <script src="https://rawgit.com/neo4j-contrib/neovis.js/master/dist/neovis.js"></script>
    </head>   
    <script>
        function draw() {
            var config = {
                container_id: "viz",
                server_url: "bolt://localhost:7687",
                server_user: "neo4j",
                server_password: "123456",
                labels: {
                    "Arastirmaci": {
                        caption: "name"
                        
                    },
                    'Yayinlar':{
                        caption:"yName",
                        size: "pagerank",
                        community: "community"
                    }
                },
                relationships: {
                    "ORTAK": {
                        caption: false,
                        thickness: "count"
                    }
                },
                initial_cypher: "MATCH p=(:Arastirmaci)-[:ORTAK]->(:Arastirmaci),y=(:Arastirmaci)-[:YAZAR]->(:Yayinlar) RETURN p,y"
            }

            var viz = new NeoVis.default(config);
            viz.render();
        }
    </script>
    <body onload="draw()">
        <div id="viz">
            
        </div>
        <div class="form">
            <form action="/back" method="post" >
                <input type="submit" name="cik" value="Return">
            </form>
        </div>
        
    </body>
</html>